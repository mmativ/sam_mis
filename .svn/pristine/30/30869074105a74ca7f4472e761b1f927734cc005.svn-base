<!-- begin row -->
<div class="row" ng-controller="sampleValidationController">
    <!-- begin col-12 -->
    <div class="col-md-12">
        <!-- begin panel -->
        <div class="{{setting.constant.panel_color}}">
            <div class="panel-heading">
                <div class="panel-heading-btn">

                </div>
                <h4 class="panel-title">Horizontal Form</h4>
            </div>
            <div class="panel-body">
                <form ng-validate disable_button class="form-horizontal" name="Register"
                      data-ng-submit="register(Register)">

                    <div class="form-group col-md-6 p_0">
                        <label class="col-md-4 control-label">Country Name</label>
                        <div class="col-md-8">
                            <!--data-msg-minlength="At least two chars" data-rule-maxlength="3" data-msg-minlength="At least three chars"-->
                            <input type="text" name="text" ng-model="Register.name" class="form-control validate_name"
                                   minlength="2" maxlength="5" required placeholder="input"/>
                        </div>
                    </div>

                    <div class="form-group col-md-6 p_0">
                        <label class="col-md-4 control-label">Country Name</label>
                        <div class="col-md-8">
                            <input type="text" name="password" ng-model="Register.paswd" required
                                   class="form-control validate_name" placeholder="input"/>
                        </div>
                    </div>


                    <div class="form-group col-md-12">
                        <label class="col-md-0 control-label"></label>
                        <div class="col-md-12">
                            <button ladda_button class="m-r-10 pull-right" type="submit"></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-6 -->
</div>
<!-- end row -->