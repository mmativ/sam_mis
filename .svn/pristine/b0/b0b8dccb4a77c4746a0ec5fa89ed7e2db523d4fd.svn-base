    function sidebar()
    {
        sleep(0);
        $dir = "../views/sample";
        $return_array = array();
        if (is_dir($dir)) {
            if ($dh = opendir($dir)) {
                while (($file = readdir($dh)) != false) {
                    if ($file == "." or $file == "..") {
                    } else {
                        $return_array[] = $file;
                    }
