              $localStorage,
              $sessionStorage,
              $crypto,
              service,
              factory,
              $timeout) {
        $rootScope.$state = $state;
        $rootScope.setting = setting;
        $rootScope.sweet = sweet;
        $rootScope.$http = $http;
        $rootScope.$location = $location;
        $rootScope.$localStorage = $localStorage;
